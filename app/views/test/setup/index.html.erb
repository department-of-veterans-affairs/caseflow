<div class="cf-app-segment cf-app-segment--alt">
  <div class="usa-grid-full">
    <div class="usa-width-one-half">
      <p><a href="<%= url_for controller: '/functions', action: 'index'%>">Change Functions</a></p>
        <% if ENV["TEST_APPEAL_IDS"] %>
          <% ENV["TEST_APPEAL_IDS"].split(",").each do |appeal_id| %>
           <p><%= link_to "Uncertify Appeal #{appeal_id}", test_setup_certification_path(appeal_id: appeal_id), method: :post %></p>
          <% end %>
        <% end %>
      <p><%= link_to "Reset Claims Establishment Tasks", test_setup_claims_establishment_path, method: :post %></p>
      <p><%= link_to "Create Tasks", admin_establish_claim_path %></p>
    </div>
  </div>
</div>
