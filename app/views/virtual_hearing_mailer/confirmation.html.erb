<% if @recipient.title == VirtualHearingMailer::RECIPIENT_TITLES[:judge] %>
  <%= render "judge_confirmation" %>
<% elsif @recipient.title == VirtualHearingMailer::RECIPIENT_TITLES[:representative] %>
  <%= render "representative_confirmation" %>
<% elsif @recipient.title == VirtualHearingMailer::RECIPIENT_TITLES[:veteran] %>
  <%= render "veteran_confirmation" %>
<% end %>
