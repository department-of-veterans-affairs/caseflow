<%= content_for :intro do %>
  <p>
    Dear <%= @recipient.name %>,
  </p>

  <p>
    You have a Veteran scheduled for a virtual hearing with a Veterans Law Judge of the Board of Veterans' Appeals:
  </p>

  <h3>
    <%= @virtual_hearing.hearing.appeal.veteran.name.to_s %>
  </h3>
  <p>
    <a href="https://appeals.cf.ds.va.gov/queue/<%= @virtual_hearing.hearing.appeal.external_id %>">
      View the case details
    </a>
  </p>
<% end %>

<%= content_for :date_time do %>
  <%= render "virtual_hearing_mailer/sections/date_time" %>
<% end %>

<%= content_for :how_to_join do %>
  <%= render "virtual_hearing_mailer/sections/how_to_join" %>
<% end %>

<%= content_for :test_your_connection do %>
  <%= render "virtual_hearing_mailer/sections/test_your_connection" %>
<% end %>

<% content_for :help_desk do %>
  <%= render "virtual_hearing_mailer/sections/help_desk" %>
<% end %>

<%= content_for :signature do %>
  <p>
    Sincerely,<br/>The Board of Veterans' Appeals
  </p>
<% end %>
