<% content_for :page_title do %>Case Certified<% end %>

<div id="certifications-generate" class="cf-app-msg-screen cf-app-segment cf-app-segment--alt">
  <h1 class="cf-success cf-msg-screen-heading">Congratulations!</h1>
  <h2 class="cf-msg-screen-deck">The case has been certified.</h2>

  <ul class="cf-list-checklist">
      <li><span class="cf-icon-success--bg"></span> Verified documents were in eFolder</li>
      <li><span class="cf-icon-success--bg cf-success"></span> Completed and uploaded Form 8</li>
  </ul>

  <p class="cf-msg-screen-text">Way to go! You can now close this browser window and open another case in VACOLS.</p>
  <% if Rails.env.development? || Rails.env.demo? || Rails.env.test? %>
      <%= link_to "Next Ready Certification", new_certification_path(vacols_id: "#{params[:id].to_i+1}C")%>
      <br>
      <%= link_to "Next Mismatched Certification", new_certification_path(vacols_id: "#{params[:id].to_i+333}C")%>
      <br>
      <%= link_to "Next Certified Certification", new_certification_path(vacols_id: "#{params[:id].to_i+666}C")%>
      <br>
      <%= link_to "Next Remand Certification", new_certification_path(vacols_id: "#{params[:id].to_i+198}C")%>
      <br>
      <%= link_to "Next Full Grant Certification", new_certification_path(vacols_id: "#{params[:id].to_i+531}C")%>
      <br>
  <% end %>
  <% if current_user.css_id == ENV['TEST_USER_ID'] && params[:id] == ENV["TEST_APPEAL_ID"] %>
      <%= link_to "Uncertify Appeal", uncertify_certification_path(params[:id]), method: :post %>
  <% end %>

</div>
