<%#
  Partial requires arguments:
  - name: user facing name of the document
  - date: VACOLS date
  - match: boolean representing if there is a matching document in VBMS
%>

<tr id="<%= name.downcase.parameterize %>-match">
  <td> <%= document.matching? ? svg_icon(:found) : svg_icon(:missing) %> </td>
  <td> <%= name %> </td>
  <td> <%= document.vacols_date.to_formatted_s(:short_date) %> </td>
  <td> <%= document.receipt_date ? document.receipt_date.to_formatted_s(:short_date) : "Not found" %> </td>
</tr>
