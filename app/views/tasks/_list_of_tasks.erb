<h2><%= title %>
  <span class="cf-right-side">
    <div class="usa-width-one-half">
      <form class="usa-search usa-search-small">
        <div role="search">
          <label for="search-field-small">Search</label>
          <input id="search-field-small" type="search" name="search">
          <button type="submit">
            <span class="usa-sr-only">Search</span>
          </button>
        </div>
      </form>
    </div>
  </span>
</h2>
<table class="usa-table-borderless" summary="list of tasks">
  <thead>
    <tr>
      <th scope="col"><h3>Name</h3></th>
      <th scope="col"><h3>Veteran ID</h3></th>
      <th scope="col"><h3>Status</h3></th>
      <th scope="col"><h3>Worked By</h3></th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr id="task-<%= task.id %>">
        <td>
          <%= task.appeal.veteran_name %>
        </td>
        <td>
          <%= task.appeal.vbms_id %>
        </td>
        <td>
          <%= task.progress_status %>
        </td>
        <td>
          <%= 
            if task.assigned?
              task.user.css_id 
            end
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<a class="cf-right-side">Show More</a>
