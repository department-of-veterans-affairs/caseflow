{
  "ASSIGNED_TASKS_TAB_NAME": "assigned",
  "COMPLETED_TASKS_TAB_NAME": "completed",
  "ON_HOLD_TASKS_TAB_NAME": "on_hold",
  "TRACKING_TASKS_TAB_NAME": "tracking",
  "UNASSIGNED_TASKS_TAB_NAME": "unassigned",

  "APPEAL_TYPE_COLUMN": "typeColumn",
  "CASE_DETAILS_LINK_COLUMN": "detailsColumn",
  "DAYS_ON_HOLD_COLUMN": "daysOnHoldColumn",
  "DAYS_WAITING_COLUMN": "daysWaitingColumn",
  "DOCKET_NUMBER_COLUMN": "docketNumberColumn",
  "DOCUMENT_COUNT_READER_LINK_COLUMN": "readerLinkColumn",
  "HEARING_BADGE_COLUMN": "hearingBadgeColumn",
  "ISSUE_COUNT_COLUMN": "issueCountColumn",
  "REGIONAL_OFFICE_COLUMN": "regionalOfficeColumn",
  "TASK_ASSIGNEE_COLUMN": "assignedToColumn",
  "TASK_ASSIGNER_COLUMN": "completedToNameColumn",
  "TASK_CLOSED_DATE_COLUMN": "completedDateColumn",
  "TASK_CREATED_AT_COLUMN": "createdDateColumn",
  "TASK_DUE_DATE_COLUMN": "caseDueDateColumn",
