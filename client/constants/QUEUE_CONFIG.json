  "TASK_TYPE_COLUMN": "taskColumn",

  "COLUMNS": {
    "APPEAL_TYPE": {
      "filter_function": "filter_case_type",
      "name": "typeColumn",
      "sorting_table": "cached_appeal_attributes",
      "sorting_columns": ["is_aod", "case_type", "docket_number"]
    },
    "CASE_DETAILS_LINK": {
      "name": "detailsColumn",
      "sorting_table": "cached_appeal_attributes",
      "sorting_columns": ["veteran_name"]
    },
    "DAYS_ON_HOLD": {
      "name": "daysOnHoldColumn"
    },
    "DAYS_WAITING": {
      "name": "daysWaitingColumn",
      "sorting_table": "tasks",
      "sorting_columns": ["assigned_at"]
    },
    "DOCKET_NUMBER": {
      "filter_function": "filter_docket_type",
      "name": "docketNumberColumn",
      "sorting_table": "cached_appeal_attributes",
      "sorting_columns": ["docket_type", "docket_number"]
    },
    "DOCUMENT_COUNT_READER_LINK": {
      "name": "readerLinkColumn"
    },
    "HEARING_BADGE": {
      "name": "hearingBadgeColumn"
    },
    "ISSUE_COUNT": {
      "name": "issueCountColumn",
      "sorting_table": "cached_appeal_attributes",
      "sorting_columns": ["issue_count"]
    },
    "REGIONAL_OFFICE": {
      "filter_function": "filter_regional_office",
      "name": "regionalOfficeColumn",
      "sorting_table": "cached_appeal_attributes",
      "sorting_columns": ["closest_regional_office_city"]
    },
    "TASK_ASSIGNEE": {
      "name": "assignedToColumn"
    },
    "TASK_ASSIGNER": {
      "name": "completedToNameColumn"
    },
    "TASK_CLOSED_DATE": {
      "name": "completedDateColumn",
      "sorting_table": "tasks",
      "sorting_columns": ["closed_at"]
    },
    "TASK_CREATED_AT": {
      "name": "createdDateColumn",
      "sorting_table": "tasks",
      "sorting_columns": ["created_at"]
    },
    "TASK_DUE_DATE": {
      "name": "caseDueDateColumn",
      "sorting_table": "tasks",
      "sorting_columns": ["assigned_at"]
    },
    "TASK_HOLD_LENGTH": {
      "name": "caseDaysOnHoldColumn",
      "sorting_table": "tasks",
      "sorting_columns": ["placed_on_hold_at"]
    },
    "TASK_TYPE": {
      "filter_function": "filter_task_type",
      "name": "taskColumn",
      "sorting_table": "tasks",
      "sorting_columns": ["type", "action", "created_at"]
    }
  },

  "TAB_NAME_REQUEST_PARAM": "tab",
  "PAGE_NUMBER_REQUEST_PARAM": "page",
  "SORT_COLUMN_REQUEST_PARAM": "sort_by",
  "SORT_DIRECTION_REQUEST_PARAM": "order",
  
  "COLUMN_SORT_ORDER_ASC": "asc",
  "COLUMN_SORT_ORDER_DESC": "desc"
}
